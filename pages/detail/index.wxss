/* 步骤条 */
.steps_box{
  height: 150rpx;
  padding-top: 37px;
  position:relative;
}
.progress{
  margin: auto;
  /* margin-top: 100rpx; */
}
.steps_all{
  width: 100%;
  position: absolute;
  right: 0;
  top: 50rpx;
  display:flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  /* margin-top: -37px; */
}
.steps_one_box{
  height: 100%;
  width: 20%;
  display:flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.steps{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color:red;
  text-align: center;
}
.steps_img{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.steps2{
  width: 35rpx;
  height: 35rpx;
  border-radius: 50rpx;
  background-color: red;
  text-align: center;
}
.steps3{
  width: 35rpx;
