<view class="page">
  <view class="head">
     <view class="avatar">
        <image class="image"  src="{{avatar}}" />
     </view>
     <view class="login" wx:if="{{!isLogin}}">
        <button class="onLogin" type="warn" bindtap='onlogin'>点击登录</button>
     </view>
     <view class="userinfo" wx:else>
       <view class="infoSet">
         <view class="name">{{userInfo.name}}
           <image class="gender" src="{{gender}}" />
           <view class="contact"><image class="gender" src="../../icons/phone.png" /><view class="lastSet">{{userInfo.contact}}</view></view>
         </view>
         <mp-row>
          <mp-col span="{{12}}">
            <view class="fisrtSet">
              <view class="col">
                <view class="inline">单位：<view class="lastSet">{{userInfo.unit}}</view></view>
                <view class="inline">邮箱：<view class="lastSet">无</view></view>
                <view class="inline">入党时间：<view class="lastSet">{{userInfo.enter_party_time}}</view></view>
              </view>
            </view>
          </mp-col>
          <mp-col span="{{12}}" >
            <view class="fisrtSet">
              <view class="col">
                <view class="inline">组织：<view class="lastSet">{{userInfo.organization}}</view></view>
                <view class="inline">学历：<view class="lastSet">{{userInfo.education_lvl}}</view></view>
                <view class="inline">出生日期：<view class="lastSet">{{birth}}</view></view>
              </view>
            </view>
          </mp-col>
        </mp-row>
        <view class="fisrtSet">党员专长:
          <view class="tags">
                  <view wx:for="{{userInfo.tags}}" wx:key='index' wx:for-item="item" wx:for-index="index">
                     <view>{{item.name+'、'}}</view>
                  </view>
                </view>
              </view>
              <view class="location"><image class="gender" src="../../icons/location.png" /><view class="lastSet">{{address}}</view></view>
       </view>
     </view>
  </view>
  <view class="body">
    <mp-tabs 
    tabs="{{tabs}}" 
    activeTab="{{activeTab}}" 
    swiperClass="weui-tabs-swiper"
    tabClass="tab-class"
    tabUnderlineColor="#ff1818"
    bindtabclick="onTabClick"
    bindchange="onChange"
    activeClass="tab-bar-title__selected"
  >
    <block wx:for="{{tabs}}" wx:key="title">
      <view class="tab-content" data-set="{{item}}" slot="tab-content-{{index}}" bind:tap="handleClick" >
        <view class="item-title">
          {{item.title}}
        </view>
      </view>
    </block>
  </mp-tabs>
  </view>
  <view class="foot"></view>
</view>
